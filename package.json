    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "moment-timezone": "^0.5.33",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^2.1.6",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.13.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
