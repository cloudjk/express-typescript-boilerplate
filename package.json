    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
